@model BitirmeProjesi.Models.OzelGun


<form method="post" action="OzelGunDuzenleme" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Masraf Adı</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>


    <div class="mb-3">
        <label for="" class="form-label">Başlangıç Tarihi</label>
        <input type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" asp-for="StartDate">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Bitiş Tarihi</label>
        <input type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" asp-for="EndDate">
    </div>



    <button type="submit" class="btn btn-primary">Kayıt Et</button>
    <button type="submit" class="btn btn-danger"
            asp-action="Delete"
            asp-controller="OzelGun" onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?');">
        Sil
    </button>
</form>
