@model List<BitirmeProjesi.Models.Personel>
   
@{

}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css">
<div class="table-responsive">
	<table id="example" class="table table-striped table-bordered dt-responsive text-nowrap overflow-scroll">
		<thead>
			<tr>
				<th>Ad</th>
				<th>Soyad</th>
				<th>Tc No</th>
				<th>Tel No</th>
				<th>Maaş</th>
				<th>Yetki</th>
				<th>Kan Grubu</th>
				<th>Doğum Yeri</th>
				<th>İl</th>
				<th>İlçe</th>
				<th>Adres</th>
				<th>Cinsiyet</th>
				<th>Doğum Yılı</th>
				<th>EDevlet Şifresi</th>
				<th>Çalıştığı Tershane</th>
				<th>AcilDurum No</th>
				<th>İşe Başlama T</th>
				<th>İşten Ayrılma T</th>
				<th>Durum</th>
				<th>Düzenleme</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var personel in Model)
			{
				<tr>
					<td>@personel.Ad</td>
					<td>@personel.Soyad</td>
					<td>@personel.TcNo</td>
					<td>@personel.TelefonNo</td>
					<td>@personel.Maas</td>
					<td>@personel.Yetki</td>
					<td>@personel.KanGrubu</td>
					<td>@personel.DoğumYeri</td>
					<td>@personel.Il</td>
					<td>@personel.Ilce</td>
					<td>@personel.Adres</td>
					@if (personel.Cinsiyet == true)
					{
						<td>Erkek</td>
					}
					@if (personel.Cinsiyet == false)
					{
						<td>Kadın</td>
					}
					<td>@personel.DoğumYılı</td>
					<td>@personel.EDevletŞifre</td>
					<td>@personel.CalıstıgıTershane</td>
					<td>@personel.AcilDurumdaUlaşılacakKişiNo</td>
					<td>@personel.IseBaslamaTarihi.ToString("dd-MM-yyyy")</td>
					<td>@personel.IstenAyrılmaTarihi.ToString("dd-MM-yyyy")</td>
					@if (personel.CalısmaDurumu == true)
					{
						<td>Çalışıyor</td>
					}
					@if (personel.CalısmaDurumu == false)
					{
						<td>İşten Ayrılmış</td>
					}
					<td>
						<a href="PersonelDuzenleme/@personel.Id">Düzenle Veya Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>




<script src="https://code.jquery.com/jquery-3.7.1.js"> </script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script>


<script>
	new DataTable('#example');

</script>






	

