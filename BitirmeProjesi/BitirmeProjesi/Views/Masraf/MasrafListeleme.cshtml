@model List<BitirmeProjesi.Models.Masraf>

@{

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css">
<div class="table-responsive">
	<table id="Masraf" class="table table-striped table-bordered dt-responsive text-nowrap overflow-scroll">
		<thead>
			<tr>
				<th>Masraf Adı</th>
				<th>Masraf Türü</th>
				<th>Masraf Tutarı </th>
				<th>Masraf Tarihi</th>
				<th>Düzenleme</th>


			</tr>
		</thead>
		<tbody>
			@foreach (var masraf in Model)
			{
				<tr>
					<td>@masraf.MasrafAdı</td>
					<td>@masraf.MasrafTipi</td>
					<td>@masraf.MasrafTutarı</td>
					<td>@masraf.MasrafTarihi.ToString("dd-MM-yyyy")</td>
					
					<td>
						<a href="MasrafDuzenleme/@masraf.Id">Düzenle Veya Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>

<script src="https://code.jquery.com/jquery-3.7.1.js"> </script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script>
<script>
	new DataTable('#Masraf');
</script>