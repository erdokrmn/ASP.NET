@model List<BitirmeProjesi.Models.ViewModel.GemiSurecListelemeViewModel>

@{

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css">
<div class="table-responsive">
    <table id="GemiSurecListesi" class="table table-striped table-bordered dt-responsive width flex-sm-nowrap overflow-scroll">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Gemi Parça Adı</th>
                <th>Durum</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.AdSoyad</td>
                    <td>@item.GemiParcaAdı</td>
                    <td>@item.Durum</td>
                    <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                    <td>
                        <form asp-action="DeleteGemiSurec" method="post" onsubmit="return confirm('Bu kaydı silmek istediğinizden emin misiniz?');">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<script src="https://code.jquery.com/jquery-3.7.1.js"> </script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script>
<script>
    new DataTable('#GemiSurecListesi');
</script>
