@model BitirmeProjesi.Models.ViewModel.TevziListelemeViewModel
  


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css">
<div class="table-responsive">
	<table id="Masraf" class="table table-striped table-bordered dt-responsive text-nowrap overflow-scroll">
		<thead>
			<tr>
				<th>Personel Adı</th>
				<th>Çalıştığı Saat</th>
				<th>Mesai Saati </th>
				<th>Çalıştığı Tarih</th>
				<th>Durum</th>
				<th>Silme</th>


			</tr>
		</thead>
		<tbody>
			@foreach (var tevzi in Model.TevziPersonel)
			{
					<tr>
						<td>@tevzi.Personel.Ad</td>
						<td>@tevzi.CalısmaSaati</td>
						<td>@tevzi.MesaiSaati</td>
						<td>@tevzi.TevziTarih.ToString("dd-MM-yyyy")</td>
						
						@if (tevzi.Durum==true)
						{
							<td>İşe Gelindi</td>
						}
						@if (tevzi.Durum==false)
						{
							<td>İşe Gelinmemiş</td>
						}
						<form method="post" action="Delete" class="mt-5">
						<td>
						
						<input type="hidden" class="form-control" asp-for="(@tevzi.Id)" name="Id" readonly>
						<button type="submit" class="btn btn-primary">
							Sil
						</button>
						
						</td>
						</form>
					</tr>
			}
		</tbody>
	</table>

</div>

<script src="https://code.jquery.com/jquery-3.7.1.js"> </script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script>
<script>
	new DataTable('#Masraf');
</script>
