        <label for="" class="form-label">Doğum Tarihi</label>
        <input type="number" class="form-control" asp-for="DogumYılı">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">TC Kimlik Numarası</label>
        <input type="number" class="form-control" asp-for="TCKimlikNo">
    </div>
   
    <button type="submit" asp-action="Index" class="btn btn-primary">Sumbit</button>
